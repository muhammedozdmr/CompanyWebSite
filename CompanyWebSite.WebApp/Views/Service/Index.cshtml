@model List<ServiceDto>

<div class="site-content">
    <!--=================================
    Page Header -->
    <div class="inner-header bg-holder" style="background-image: url(images/banner/inner-header/page-header-01.jpg);">
        <div class="container">
            <div class="row  justify-content-center">
                <div class="col-md-12 text-center">
                    @foreach (var item in Model)
                    {
                        foreach (var service in item.Pages ?? new List<PageDto>())
                        {
                            var firstPage = item.Pages.FirstOrDefault(x => x.Id == 2);
                            if (firstPage != null)
                            {
                                <h1 class="title">@firstPage.PageHeaderTitle</h1>
                                <p>@service.PageHeaderSubtitle</p>
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="content-wrapper">

        <!--=================================
        Services -->
        <section class="space-ptb ellipse-bottom">
            <div class="container">
                <div class="row justify-content-start">
                    <div class="col-lg-12">
                        <div class="services grid-wrapper grid-xl-4 grid-lg-3 grid-md-2 grid-sm-1">
                            @foreach (var item in Model)
                            {
                                <div class="service-wrapper service-style-1">
                                    <div class="service-inner">
                                @foreach (var serviceMedia in item.ServiceMediaItems)
                                {
                                    if (serviceMedia.MediaType == "image")
                                    {
                                        <div class="service-icon">
                                            <img class="img-fluid" src="@serviceMedia.FilePath" alt="#">
                                        </div>
                                    }
                                    else if (serviceMedia.MediaType == "icon")
                                    {
                                        <div class="bg-icon">
                                            <img class="img-fluid" src="@serviceMedia.FilePath" alt="#">
                                        </div>
                                    }
                                }
                                        <div class="service-content">
                                            <h5 class="service-title">@item.DefaultTitle</h5>
                                            <p>@item.Summary</p>
                                            <div class="service-links">
                                                <a class="btn-arrow" href="#">
                                                    <svg width="17" height="16" viewBox="0 0 17 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                        <g clip-path="url(#clip0_923_133)">
                                                            <path d="M8.70801 0.959961L9.29825 2.7665C10.2512 5.68321 12.8308 7.77453 15.8928 8.1128C12.8468 8.37564 10.2578 10.4348 9.3276 13.3343L8.70801 15.2657" stroke="inherit" stroke-width="2"/><path d="M15.7602 8.12158H0.1875" stroke="inherit" stroke-width="2"/>
                                                        </g>
                                                        <defs>
                                                            <clipPath id="clip0_923_133">
                                                                <rect width="15.904" height="14.8437" fill="inherit" transform="translate(0.1875 0.578125)"/>
                                                            </clipPath>
                                                        </defs>
                                                    </svg>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--=================================
        Services -->
    </div>
</div>