@model List<NavbarFooterSidePanelDto>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    @foreach (var item in Model)
    {
        foreach (var companyInfo in item.CompanyInfos)
        {
            <meta name="keywords" content="@companyInfo.CompanyName">
            <meta name="description" content="@companyInfo.CompanyArea">
            <meta name="author" href="mailto:@companyInfo.Email" content="@companyInfo.Email">
        }
    }
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>
        @foreach (var item in Model)
        {
            foreach (var companyInfo in item.CompanyInfos)
            {
                @companyInfo.CompanyName
            }
        }
    </title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="images/favicon.ico">
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&family=Russo+One&display=swap" rel="stylesheet">

    <!-- CSS Global Compulsory (Do not remove)-->
    <link rel="stylesheet" href="css/font-awesome/all.min.css">
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css">
    <!-- Page CSS Implementing Plugins (Remove the plugin CSS here if site does not use that feature)-->
    <link rel="stylesheet" href="css/owl-carousel/owl.carousel.min.css">
    <link rel="stylesheet" href="css/swiper/swiper.min.css">
    <link rel="stylesheet" href="css/magnific-popup/magnific-popup.css">
    <!-- Template Style -->
    <link rel="stylesheet" href="css/style.css">
</head>
<body>

    <!--=================================
    cursor -->
    <div id="cursor">
        <div class="cursor__circle"></div>
    </div>
    <!--=================================
    cursor -->

    <div id="page" class="main">    

    <!--=================================
    Header -->
    <header class="header header-default header-sticky header-absolute">
        <div class="header-inner">
            <div class="site-logo">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img class="img-fluid" src="images/techliberty-images/White_logo_no_background_yatay.svg" alt="logo" /></a>
            </div>
            <div class="site-menu d-none d-xl-block">
                <ul class="main-menu">
                    @foreach (var item in Model)
                    {
                        foreach (var navbarItem in item.NavbarItems)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="@navbarItem.NavbarControllerName" asp-action="Index">@navbarItem.Name</a></li>
                        }
                    }
                </ul>
            </div>
            <div class="language-selector dropdown ms-auto">
                <a class="nav-link dropdown-toggle" href="?lang=tr" id="languageDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="https://flagcdn.com/w20/tr.png" alt="Turkish" /> Türkçe
                </a>
                <ul class="dropdown-menu" aria-labelledby="languageDropdown">
                    <li><a class="dropdown-item" href="?lang=en"><img src="https://flagcdn.com/w20/us.png" alt="English" /> English</a></li>
                    <li><a class="dropdown-item" href="?lang=de"><img src="https://flagcdn.com/w20/de.png" alt="German" /> Deutsch</a></li>
                    <li><a class="dropdown-item" href="?lang=ru"><img src="https://flagcdn.com/w20/ru.png" alt="Russian" /> Русский</a></li>
                </ul>
            </div>
            <div class="site-action d-none d-xl-block">
                <div class="action-hamburger">
                    <a class="hamburger" href="#" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">
                        <span class="hamburger-container">
                            <span class="hamburger-inner"></span>
                            <span class="hamburger-hidden"></span>
                        </span>
                    </a>
                </div>
            </div>

            <div class="mobile-action d-block d-xl-none">
                <div class="mobile-hamburger">
                    <a class="hamburger" href="#" data-bs-toggle="offcanvas" data-bs-target="#menuOffcanvas" aria-controls="menuOffcanvas">
                        <span class="hamburger-container">
                            <span class="hamburger-inner"></span>
                            <span class="hamburger-hidden"></span>
                        </span>
                    </a>
                </div>
            </div>
        </div>
    </header>

    <!--=================================
    Main Menu OffCanvas -->
    <div class="offcanvas main-menu-offcanvas offcanvas-end" tabindex="-1" id="menuOffcanvas" aria-labelledby="menuOffcanvasLabel">
        <div class="offcanvas-header">
            <a id="menuOffcanvasLabel" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img class="img-fluid" src="images/logo.svg" alt="logo" /></a>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"><i class="fa-solid fa-xmark"></i></button>
        </div>
        <div class="offcanvas-body">
            <div class="body-inner">
                <nav class="navbar">
                    <ul class="navbar-nav">
                        @foreach (var item in Model)
                        {
                            foreach (var navbarItem in item.NavbarItems)
                            {
                                <li class="nav-item"><a class="nav-link" asp-controller="@navbarItem.NavbarControllerName" asp-action="Index">@navbarItem.Name</a></li>
                            }
                        }
                    </ul>
                </nav>
                <div class="bottom-info">
                    <div class="contact-info">
                        @foreach (var itemCompany in Model)
                        {
                            foreach (var companyInfo in itemCompany.CompanyInfos)
                            {
                                <span class="number" href="tel:+905432333332">@companyInfo.Phone</span>
                                <a class="mail" href="mailto:info@techliberty.co"><i class="fa-regular fa-envelope"></i>@companyInfo.Email</a>
                            }
                        }
                        <span class="text">
                                @foreach (var item in Model)
                                {
                                    foreach (var sidePanel in item.SidePanels)
                                    {
                                        @sidePanel.SidePanelContactTitle
                                        @sidePanel.SidePanelContactContent
                                    }
                                }
                            </span>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--=================================
    Header Side Panel -->
    <div class="offcanvas offcanvas-end sidepanel-offcanvas" tabindex="-1" id="offcanvasRight">
        <div class="offcanvas-header">
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"><i class="fa-solid fa-xmark"></i></button>
        </div>

        <div class="offcanvas-body">
            <div class="body-inner">
                <div class="about-info">
                    @foreach (var item in Model)
                    {
                        foreach (var sidePanel in item.SidePanels)
                        {
                            <h4 class="title">@sidePanel.SidePanelMainTitle</h4>
                            <p>@sidePanel.SidePanelMainContent</p>
                        }
                    }
                </div>
                <div class="socail-info">
                    <ul class="socail-list-item">
                        @foreach (var item in Model)
                        {
                            foreach (var sidePanel in item.CompanyInfos)
                            {
                                <li><a href="@sidePanel.Facebook"><i class="fa-brands fa-facebook-f"></i>Facebook</a></li>
                                <li><a href="@sidePanel.Instagram"><i class="fa-brands fa-instagram"></i>Instagram</a></li>
                                <li><a href="@sidePanel.Twitter"><i class="fa-brands fa-x-twitter"></i>X</a></li>
                                <li><a href="@sidePanel.LinkedIn"><i class="fa-brands fa-linkedin"></i>LinkedIn</a></li>
                            }
                        }
                    </ul>
                </div>
                <div class="contact-info">
                    @foreach (var item in Model)
                    {
                        foreach (var companyInfo in item.CompanyInfos)
                        {
                            <span class="number" href="tel:@companyInfo.Phone">@companyInfo.Phone</span>
                            <a class="mail" href="mailto:@companyInfo.Email"><i class="fa-regular fa-envelope"></i>@companyInfo.Email</a>
                        }
                        foreach (var sidePanel in item.SidePanels)
                        {
                            <h6 class="text">@sidePanel.SidePanelContactTitle</h6>
                            <span class="text">@sidePanel.SidePanelContactContent</span>
                        }
                    }
                </div>
            </div>
        </div>
    </div>


    <div class="site-content">

        <div class="container-fluid">
            <div class="item-efftect container">
                <div class="efftect overflow-hidden"></div>
                <div class="efftect overflow-hidden"></div>
                <div class="efftect overflow-hidden"></div>
                <div class="efftect overflow-hidden"></div>
                <div class="efftect overflow-hidden"></div>
            </div>
        </div>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <footer class="site-footer footer-dark">
            <div class="footer-main">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-3 col-md-5">
                            <div class="widget widget-address-info">
                                @foreach (var item in Model)
                                {
                                    foreach (var footer in item.Footers)
                                    {
                                        <h5 class="widget-title">@footer.CompanyInfoTitle</h5>
                                        <ul class="address-info-list"></ul>
                                    }
                                }

                                <h5 class="widget-title">Where To Find Us</h5>
                                <ul class="address-info-list">
                                    <li><i class="icon"><img class="img-fluid" src="images/svg/address-info-contacts.svg" alt=""/></i><span class="info"><span>17504 Carlton Cuevas Rd </span>Gulfport, MS, 39503</span></li>
                                    <li><i class="icon"><img class="img-fluid" src="images/svg/address-info-headphone.svg" alt=""/></i><span class="info"><span>001123456789 </span>Mon-fri 8:30am 6:30pm</span></li>
                                    <li><i class="icon"><img class="img-fluid" src="images/svg/address-info-email.svg" alt=""/></i><span class="info"><span>Info@example.com </span>24x7 online support</span></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-xl-5 col-md-7">
                            <div class="widget">
                            @foreach (var item in Model)
                            {
                                foreach (var footer in item.Footers)
                                {
                                    <h5 class="widget-title">@footer.NewsletterTitle</h5>
                                }
                            }
                                <div class="widget widget-newsletter mb-4 pb-2">
                                    <form class="newsletter-form">
                                        @foreach (var item in Model)
                                        {
                                            foreach (var footer in item.Footers)
                                            {
                                                <input type="text" class="form-control" placeholder="@footer.NewsletterPlaceholder">
                                            }
                                        }
                                        <button type="submit" class="subscribe-btn"><i class="fa-solid fa-paper-plane"></i></button>
                                    </form>
                                </div>
                                <div class="widget widget-menu">
                                    @foreach (var item in Model)
                                    {
                                        foreach (var footer in item.Footers)
                                        {
                                            <h6 class="widget-title">@footer.QuickLinksTitle</h6>
                                        }
                                    }
                                    <ul class="list-unstyled list-col-3 mb-0">
                                        @foreach(var navbar in Model)
                                        {
                                            foreach (var navbarItem in navbar.NavbarItems)
                                            {
                                                <li><a asp-controller="@navbarItem.NavbarControllerName" asp-action="Index">@navbarItem.Name</a></li>
                                            }
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-12 ms-auto">
                            <div class="widget-socail">
                                <ul class="socail-icon">
                                    @foreach (var item in Model)
                                    {
                                        foreach (var companyInfo in item.CompanyInfos)
                                        {
                                            <li><a href="@companyInfo.Facebook"><img src="images\svg\facebooklogo.svg" alt="Facebook Logo"/></a></li>
                                            <li><a href="@companyInfo.Instagram"><img src="images\svg\instagramlogo.svg" alt="Instagram Logo"/></a></li>
                                            <li><a href="@companyInfo.LinkedIn"><img src="images\svg\linkedinlogo.svg" alt="Linkedin Logo"/></a></li>
                                            <li><a href="@companyInfo.Twitter"><img src="images\svg\twitter-x.svg" alt="X Logo"/></a></li>
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="footer-copyright">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-6"><p><a class="footer-logo" asp-controller="Home" asp-action="Index"><img class="img-fluid" src="images/techliberty-images/White_logo_no_background_yatay.svg" alt="logo" /></a></p></div>
                        <div class="col-lg-6 text-lg-end"><p>Develop and design by <a href="#">TechLiberty Software Solutions</a></p></div>
                    </div>
                </div>
            </div>
        </footer>

        <!--=================================
        Back To Top -->
        <div class="back-to-top">
            <svg class="progress-circle svg-content" width="100%" height="100%" viewBox="-1 -1 102 102">
                <path d="M50,1 a49,49 0 0,1 0,98 a49,49 0 0,1 0,-98" />
            </svg>
        </div>

    </div>
    <!--=================================
    Javascript -->
    <!-- JS Global Compulsory (Do not remove)-->
    <script src="js/jquery-3.7.1.min.js"></script>
    <script src="js/jquery.appear.js"></script>
    <script src="js/popper/popper.min.js"></script>
    <script src="js/bootstrap/bootstrap.min.js"></script>
    <!-- Page JS Implementing Plugins (Remove the plugin script here if site does not use that feature)-->
    <script src="js/owl-carousel/owl.carousel.min.js"></script>
    <script src="js/swiper/swiper.min.js"></script>
    <script src="js/swiperanimation/SwiperAnimation.min.js"></script>
    <script src="js/shuffle/shuffle.min.js"></script>
    <script src="js/magnific-popup/jquery.magnific-popup.js"></script>
    <script src="js/counter/jquery.countTo.js"></script>
    <script src="js/gsap.min.js"></script>
    <script src="js/attractHover.js"></script>
    <script src="js/custom.js"></script> <!-- Template Scripts (Do not remove)-->
    @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>
</html>