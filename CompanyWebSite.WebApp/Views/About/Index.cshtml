        <div class="space-pb ellipse-bottom">
        <div class="container">
            <div class="row">
                <div class="col-lg-5">
                    <div class="sticky-top" style="top: 80px;">
                        <div class="section-title mb-0">
                            @foreach (var item in Model)
                            {
                                var firstPage = item.Pages.FirstOrDefault(x => x.Id == 7);
                                if (firstPage != null)
                                {
                                    <span class="sub-title">
                                        <img class="img-fluid" src="images/subtitle-icon.png" alt=""/> @firstPage.PageContentTitle
