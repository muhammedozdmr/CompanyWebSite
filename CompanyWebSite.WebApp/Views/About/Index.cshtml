                                }
                            }
                        </div>
                    </div>
                    <div class="col-lg-7">
                        @foreach (var item in Model)
                        {
                            foreach (var history in item.Histories)
                            {
                                <div class="history-wrapper mt-4 mb-4">
                                    <div class="history-year-sm">@history.Year</div>
                                    <div class="history-info">
                                        <div class="history-year-lg">@history.Year</div>
                                        <div class="history-content">
                                            <p>@history.YearDescription</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        </div>
