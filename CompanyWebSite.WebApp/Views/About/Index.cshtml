@model List<AboutDto>


<!--=================================
Page Header -->
<div class="inner-header bg-holder" style="background-image: url(images/banner/inner-header/page-header-01.jpg);">
    <div class="container">
        <div class="row  justify-content-center">
            <div class="col-md-12 text-center">
                @foreach (var item in Model)
                {
                    var firstPage = item.Pages.FirstOrDefault(x => x.Id == 1);
                    if (firstPage != null)
                    {
                        <h1 class="title">@firstPage.PageHeaderTitle</h1>
                        <p>@firstPage.PageHeaderSubtitle</p>
                    }
                }
            </div>
        </div>
    </div>
</div>

<div class="content-wrapper">

    <!--=================================
    About Info -->
    <section class="space-pt z-index-2">
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-lg-7 mb-5 mb-lg-0">
                    <div class="section-title pb-0 pb-lg-4">
                        @foreach (var item in Model)
                        {
                            var firstPage = item.Pages.FirstOrDefault(x => x.Id == 1);
                            if (firstPage != null)
                            {
                                <span class="sub-title">
                                    <img class="img-fluid" src="images/subtitle-icon.png" alt=""> @firstPage.PageContentTitle
                                </span>
                                <h2 class="title">@firstPage.PageMainSlogan</h2>
                            }
                        }
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <img class="img-fluid" src="images/about/about-03.jpg" alt="#">
                        </div>
                        <div class="col-sm-8">
                            @foreach (var item in Model)
                            {
                                <p class="ps-lg-3 mt-4 mt-sm-0">@item.Summary</p>
                            }
                            <div class="d-flex justify-content-center mt-5 ms-sm-5 ms-0">
                                <a class="btn btn-effect" href="#">
                                    @foreach (var item in Model)
                                    {
                                        <span>@item.ButtonName</span>
                                    }
                                    <svg width="20" height="22" viewBox="0 0 20 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <g clip-path="url(#clip0_59_253)">
                                            <path d="M19.4854 11.4293L17.0513 12.221C13.1214 13.4993 10.3036 16.9595 9.84784 21.0668C9.49371 16.981 6.71926 13.5081 2.81255 12.2604L0.210283 11.4293" stroke="white" stroke-width="2"/><path d="M9.83594 20.8889L9.83594 0" stroke="white" stroke-width="2"/>
                                        </g>
                                        <defs>
                                            <clipPath id="clip0_59_253">
                                                <rect width="21.3333" height="20" fill="white" transform="translate(20) rotate(90)"/>
                                            </clipPath>
                                        </defs>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-4 mt-sm-5">
                        <div class="col-sm-6">
                            <div class="counter counter-style-1">
                                @foreach (var item in Model)
                                {
                                    <div class="counter-number">
                                        <span class="timer mb-0" data-to="@item.CustomerCount" data-speed="2000">@item.CustomerCount</span><span class="suffix">+</span>
                                    </div>
                                }
                                <div class="counter-info">
                                    <span class="counter-title">Business Peoples</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="counter counter-style-1">
                                @foreach (var item in Model)
                                {
                                    <div class="counter-number">
                                        <span class="timer mb-0" data-to="@item.CustomerSatisfaction" data-speed="2000">@item.CustomerSatisfaction</span><span class="suffix">%</span>
                                    </div>
                                }
                                <div class="counter-info">
                                    <span class="counter-title">Customer Satisfaction</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <img class="img-fluid ps-lg-5" src="images/about/about-01.jpg" alt="#">
                </div>
            </div>
        </div>
    </section>
    <!--=================================
